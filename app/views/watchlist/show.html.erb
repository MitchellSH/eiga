<div class="section" style="padding: 5rem 0;">
  <div class="container">
    <div class="grid">
     <div class="col-xs-12">
       <h2>My Watchlist</h2>
     </div>
      <div class="col-xs-12">
        <div class="grid">
          <% @watchlist.each do |m| %>
            <div class="col-xs-12 col-md-6" style="padding: 0;">
              <%= link_to details_path(:id => m.id), 'data-turbolinks' => false do %>
                <div id="uid_<%= m.id %>" class="card card-blog card-plain" style="background-image: url('https://image.tmdb.org/t/p/w1280/<%= m.backdrop_path %>')" data-count="1" data-aos="fade-up">
                  <div class="card-header">
                    <div class='card-title'><%= m.title %></div>
                  </div>
                </div>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>