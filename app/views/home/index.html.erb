<div class="section" style="padding: 5rem 0;">
  <div class="container">
    <div class="grid">
      <div class="col-xs-12">
        <form id="film-search" action="<%= url_for(:controller => 'search', :action => 'show') %>" class="form-inline ml-auto">
          <div class="form-group">
            <input class="form-control mr-sm-2" type="search" name="movie" type="text" placeholder="Search">
          </div>
          <input name="page" type="hidden" value="1">
        </form>
      </div>
      <div class="col-xs-12">
        <h2>In Theaters</h2>
      </div>
      <div class="col-xs-12">
        <div class="grid">
          <% @mnp.first(1).each do |m| %>
            <div class="col-xs-12" style="padding: 0;">
              <%= link_to movie_details_show_path(:id => m.id), 'data-turbolinks' => false do %>
                <div id="uid_<%= m.id %>" class="card card-blog card-plain" style="background-image: url('https://image.tmdb.org/t/p/w780/<%= m.backdrop_path %>')" data-count="1" data-aos="fade-up">
                  <div class="card-header card-header-image">
                    <div class='card-title'><%= m.title %></div>
                  </div>
                </div>
              <% end %>
            </div>
          <% end %>
          <% @mnp.drop(1).first(2).each_with_index do |m, i| %>
            <div class="col-xs-12 col-md-6" style="padding: 0;">
              <%= link_to movie_details_show_path(:id => m.id), 'data-turbolinks' => false do %>
                <div id="uid_<%= m.id %>" class="card card-blog card-plain" style="background-image: url('https://image.tmdb.org/t/p/w780/<%= m.backdrop_path %>')" data-count="1" data-aos="fade-up">
                  <div class="card-header card-header-image">
                    <div class='card-title'><%= m.title %></div>
                  </div>
                </div>
              <% end %>
            </div>
          <% end %>
        </div>
