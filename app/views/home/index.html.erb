<div class="section" style="padding: 5rem 0;">
  <div class="container">
    <div class="grid">
      <% if notice.present? %>
        <div class="col-sx-12">
          <p id="notice"><%= notice %></p>
        </div>
      <% end %>
      <div class="col-xs-12">
        <form id="film-search" action="<%= url_for(:controller => 'search', :action => 'show') %>" class="form-inline ml-auto">
          <div class="form-group">
            <input class="form-control mr-sm-2" type="search" name="query" type="text" placeholder="Search">
          </div>
          <input name="page" type="hidden" value="1">
        </form>
      </div>
      <% if current_user.present? %>
        <div class="col-xs-12">
          <h1>My Watchlist</h1>
        </div>
        <div class="col-xs-12">
          <div class="grid">
            <% @watchlist.first(2).each do |m| %>
              <div class="col-xs-12 col-md-6" style="padding: 0;">
                <%= link_to details_path(:id => m.id), 'data-turbolinks' => false do %>
                  <div id="uid_<%= m.id %>" class="card card-blog card-plain" style="background-image: url('https://image.tmdb.org/t/p/w1280/<%= m.backdrop_path %>')" data-count="1" data-aos="fade-up">
                    <div class="card-header">
                      <div class='card-title'><%= m.title %></div>
                    </div>
                  </div>
                <% end %>
              </div>
            <% end %>
            <% @watchlist.drop(2).first(3).each_with_index do |m, i| %>
              <div class="col-xs-12 col-md-4" style="padding: 0;">
                <%= link_to details_path(:id => m.id), 'data-turbolinks' => false do %>
                  <div id="uid_<%= m.id %>" class="card card-blog card-plain" style="background-image: url('https://image.tmdb.org/t/p/w1280/<%= m.backdrop_path %>')" data-count="1" data-aos="fade-up">
                    <div class="card-header">
                      <div class='card-title'><%= m.title %></div>
                    </div>
                  </div>
                <% end %>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
      <div class="col-xs-12">
        <h1>In Theaters</h1>
      </div>
      <div class="col-xs-12">
        <div class="grid">
          <% @mnp.first(1).each do |m| %>
            <div class="col-xs-12" style="padding: 0;">
              <%= link_to details_path(:id => m.id), 'data-turbolinks' => false do %>
                <div id="uid_<%= m.id %>" class="card card-blog card-plain" style="background-image: url('https://image.tmdb.org/t/p/w1280/<%= m.backdrop_path %>')" data-count="1" data-aos="fade-up">
                  <div class="card-header">
                    <div class='card-title'><%= m.title %></div>
                  </div>
                </div>
              <% end %>
            </div>
          <% end %>
          <% @mnp.drop(1).first(2).each_with_index do |m, i| %>
            <div class="col-xs-12 col-md-6" style="padding: 0;">
              <%= link_to details_path(:id => m.id), 'data-turbolinks' => false do %>
                <div id="uid_<%= m.id %>" class="card card-blog card-plain" style="background-image: url('https://image.tmdb.org/t/p/w1280/<%= m.backdrop_path %>')" data-count="1" data-aos="fade-up">
                  <div class="card-header">
                    <div class='card-title'><%= m.title %></div>
                  </div>
                </div>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>