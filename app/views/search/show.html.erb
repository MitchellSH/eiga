<div class="section" style="padding: 5rem 0;">
  <div class="container">
    <div class="grid">
      <div class="col-xs-12">
        <form id="film-search" action="<%= url_for(:controller => 'search', :action => 'show') %>" class="form-inline ml-auto">
          <div class="form-group">
            <input class="form-control mr-sm-2" type="search" name="query" type="text" placeholder="Search Movie" value="<%= @search.user_input %>">
          </div>
          <input name="page" type="hidden" value="1">
        </form>
      </div>
      <% if @search.total_results != 0 %>
        <% @search.results.each do |m| %>
          <div class="col-xs-12 col-md-6">
            <%= link_to details_show_path(:id => m.id), 'data-turbolinks' => false do %>
              <div id="uid_<%= m.id %>" class="card card-blog card-plain" style="background-color: #ccc; background-image: url('<%= m.backdrop_path %>')">
                <div class="card-header card-header-image">
                  <div class='card-title'><%= m.title %></div>
                </div>
              </div>
            <% end %>
          </div>
        <% end %>
        <% if @search.total_pages > 1 %>
          <div class="col-xs-12">
            <div class="pagination-wrapper">
              <ul class="pagination">
                <% for i in 1..@search.total_pages do %>
                  <li class="page-item <% if @search.current_page == i %>active<% end %>">
                    <%= link_to i, search_show_path(:query => @search.user_input, :page => i), class: "page-link", 'data-turbolinks' => false %>
                  </li>
                <% end %>
              </ul>
            </div>
          </div>
        <% end %>
      <% else %>
        <div class="col-xs-12">
          <h4 style="color: #cccccc;">No Results</h4>
        </div>
      <% end %>
    </div>
  </div>
</div>