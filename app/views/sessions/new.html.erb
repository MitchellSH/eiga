<div class="section" style="padding: 6rem 0;">
  <div class="container">
    <div class="grid">
      <div class="col-xs-12">
        <p id="alert"><%= alert %></p>
        <h1>Login</h1>
        <%= form_tag '/login' do %>
          <div class="grid">
              <%= label_tag :email%>
              <%= text_field_tag :email %>
              <%= label_tag :password%>
              <%= password_field_tag :password%>
              <%= submit_tag "Login", class: "login-button" %>
          </div>
        <%end%>
      </div>
    </div>
  </div>
</div>