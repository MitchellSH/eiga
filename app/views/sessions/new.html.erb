<div class="section" style="padding: 6rem 0;">
  <div class="container">
    <div class="grid">
      <div class="col-xs-12">
<!--        <p id="alert"><%#= alert %></p>-->
        <h1>Login</h1>
      </div>
        <%= form_tag '/login' do %>
          <div class="col-xs-12">
            <%= label_tag :email%>
            <%= text_field_tag :email %>
          </div>
          <div class="col-xs-12">
            <%= label_tag :password%>
            <%= password_field_tag :password%>
          </div>
          <div class="col-xs-12">
            <%= submit_tag "Login", class: "login-button" %>
          </div>
        <%end%>
    </div>
  </div>
</div>